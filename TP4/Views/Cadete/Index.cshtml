@model List<Cadete>

<h2>Lista de Cadetes</h2>

<a class="btn btn-primary btn-sm" href='/Cadete/RegistroCadete'>Crear nuevo Cadete</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadete in Model)
        {
            <tr>
                <td>@cadete.ID</td>
                <td>@cadete.nombre</td>
                <td>@cadete.direccion</td>
                <td>@cadete.telefono</td>
                <td>
                <a class="btn btn-primary btn-sm" href="/Cadete/RegistroCadete?id=@cadete.ID">Editar</a>
                <a class="btn btn-danger btn-sm" href="/Cadete/BajaCadete?id=@cadete.ID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>